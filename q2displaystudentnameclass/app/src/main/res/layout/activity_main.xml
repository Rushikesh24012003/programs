<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/img">


    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Student Info"
        android:textAlignment="center"
        android:textColor="#FFE3DA"
        android:textSize="40dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/View2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#C3979D"
        android:text="Name : "
        android:textSize="25dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_alignLeft="@+id/head"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/View2"
        android:hint="Enter Your Name Here "
        android:textColor="#FFE3DA"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/View3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Marks : "
        android:textColor="#C3979D"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/View3"
        android:hint="Enter your Marks here"
        android:textColor="#FFE3DA"
        android:textSize="25dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View3"
        android:layout_alignLeft="@+id/View3"
        android:layout_marginTop="30sp"
        android:backgroundTint="#FFE3DA"
        android:text="Submit"
        android:textColor="#151827"
        android:layout_marginBottom="30sp"
        android:textSize="30sp"
        android:textStyle="bold|italic" />



    <TextView
        android:id="@+id/out2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/out3"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/out2"
        android:textSize="25dp"
        />



</RelativeLayout>