<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cal"
    tools:context=".MainActivity">

    <LinearLayout>
        <TextView
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textColor="#ffff"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>


    <TableRow
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        >

        <Button
            android:text="C"
            android:textSize="30sp"
            android:textColor="#EEFF0303"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="()"
            android:textSize="30sp"
            android:textColor="#EE44CA14"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="%"
            android:textSize="30sp"
            android:textColor="#EE44CA14"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="/"
            android:textSize="30sp"
            android:textColor="#EE44CA14"
            android:backgroundTint="#EEAFA9B5"
            />


    </TableRow>

    <TableRow
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:text="7"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="8"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="9"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="*"
            android:textSize="30sp"
            android:textColor="#EE44CA14"
            android:backgroundTint="#EEAFA9B5"
            />

    </TableRow>

    <TableRow
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:text="4"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="5"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="6"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="-"
            android:textSize="30sp"
            android:textColor="#EE44CA14"
            android:backgroundTint="#EEAFA9B5"
            />

    </TableRow>
    <TableRow
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:text="1"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="2"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text ="3"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="+"
            android:textSize="30sp"
            android:textColor="#EE44CA14"
            android:backgroundTint="#EEAFA9B5"
            />

    </TableRow>
    <TableRow
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:text="+/-"
            android:textSize="30sp"
            android:textColor="#EE44CA14"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="0"
            android:textSize="30sp"
            android:textColor="#EEFFFFFF"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="."
            android:textSize="30sp"
            android:textColor="#EE44CA14"
            android:backgroundTint="#EEAFA9B5"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:text="="
            android:textSize="30sp"
            android:textColor="#EE44CA14"
            android:backgroundTint="#EEAFA9B5"
            />
    </TableRow>

</TableLayout>